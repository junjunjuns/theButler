<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Group</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.group %></td>
        <td><%= message.profile %></td>
        <td><%= link_to 'Show', group_message_path(@group, message) %></td>
        <td><%= link_to 'Edit', edit_group_message_path(@group, message) %></td>
        <td><%= link_to 'Destroy', group_message_path(@group, message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_group_message_path(@group) %>
