<p id="notice"><%= notice %></p>

<h1><%= @gcategory.name %></h1>

<p>
  <%= @gcategory.desc %>
</p>
<div class="links">
  <p><%= link_to '+ Add New Item', new_group_gcategory_gitem_path(@group, @gcategory) %></p>
</div>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th colspan="2">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @gitems.each do |itm| %>
      <tr>
        <td><%= itm.name %></td>
        <td><%= itm.desc %></td>
        <td><%= link_to 'Edit', edit_group_gcategory_gitem_path(@group, @gcategory, itm) %></td>
        <td><%= link_to 'Destroy', group_gcategory_gitem_path(@group, @gcategory, itm), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Edit Category', edit_group_gcategory_path(@group, @gcategory) %> |
<%= link_to 'Back to Categories', group_gcategories_path(@group) %>
