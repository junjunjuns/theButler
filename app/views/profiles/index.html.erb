<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Profile ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Birthday</th>
      <th>Gender</th>
      <th>Nationality</th>
      <th>Religion</th>
      <th>Description</th>
      <th>User</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.id %></td>
        <td><%= profile.fname %></td>
        <td><%= profile.lname %></td>
        <td><%= profile.dob %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.nationality %></td>
        <td><%= profile.religion %></td>
        <td><%= profile.description %></td>
        <td><%= profile.user_id %></td>
        <% @user = User.find(profile.id) %>
        <td><%= @user.email %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

