<p id="notice"><%= notice %></p>

<h1><%= @category.name %></h1>

<p>
  <%= @category.desc %>
</p>

<p><%= link_to "+ add new item", new_profile_category_item_path(@profile, @category) %></p>
<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th colspan="3">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |itm| %>
      <tr>
        <td><%= itm.name %></td>
        <td><%= itm.desc %></td>
        <td><%= link_to 'Edit', edit_profile_category_item_path(@profile, @category, itm) %></td>
        <td><%= link_to 'Destroy', profile_category_item_path(@profile, @category, itm), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

<%= link_to 'Edit Category', edit_profile_category_path(@profile, @category) %> |
<%= link_to 'Back to Categories', profile_categories_path(@profile) %>